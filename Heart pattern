n = int(input())
for i in range(n//2, n, 2):#(3,7,2)
    for j in range(1, n-i, 2):
        print(" ", end="")
    for j in range(1, i+1, 1):
        print("*", end="")
    for j in range(1, n-i+1, 1):
        print(" ", end="")
    for j in range(1, i+1, 1):
        print("*", end="")
    print()
for i in reversed(range(n)):
    print(" " * (n - i - 1) + "*" * (2 * i + 1))
